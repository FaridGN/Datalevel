                                                    <option value="MS SQL">MS SQL</option>
                                                    <option value="Python">Python</option>
                                                </select>
                                                <span asp-validation-for="RegisterForm.Course"></span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-12">
                                        <button class="regbtn" type="submit">Göndər</button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
                <div class="col-lg-3 col-md-3">
                </div>
            </div>
